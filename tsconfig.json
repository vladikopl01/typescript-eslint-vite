{
  "compilerOptions": {
    //
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    //
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    //
    "module": "NodeNext",
    "outDir": "dist",
    "sourceMap": true,
    //
    "lib": [
      "ES2022"
    ],
  }
}